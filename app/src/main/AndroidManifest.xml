<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.learningaboutwine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WineTypesActivity"
            android:label="@string/title_activity_wine_types"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.learningaboutwine.MainMenuActivity" />
        </activity>

        <activity
            android:name=".BuyingWineActivity"
            android:label="@string/title_activity_buying_wine"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.learningaboutwine.MainMenuActivity" />
        </activity>

        <activity
            android:name=".DrinkingWineActivity"
            android:label="Drinking Wine"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.learningaboutwine.MainMenuActivity" />
        </activity>

        <activity
            android:name=".StoringWineActivity"
            android:label="Storing Wine"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.learningaboutwine.MainMenuActivity" />
        </activity>

        <activity
            android:name=".TaggingWineActivity"
            android:label="Example of Wine Tagging"
            android:parentActivityName=".StoringWineActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.learningaboutwine.StoringWineActivity" />
        </activity>
    </application>

</manifest>
